<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>
  <link rel="stylesheet" href="stylesheet/home.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous" />
</head>

<body>
  {{! header }}
  <header class="header">
    <nav class="navbar navbar-expand-lg">
      <div class="container-fluid">
        <a class="navbar-brand fw-bold" href="#"><img
            src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSK_ZZp2CjcOyih5-OsbN5uUgLFP8DEzb-lEg&usqp=CAU"
            class="logo" alt="" /></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse fw-bold fs-5" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link text-" aria-current="page" href="#Home">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-" href="#footer">About</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-" href="/profile">Profile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-" href="#blogs">Blogs</a>
            </li>
          </ul>
          <div class="user d-flex">
            <form class="d-flex" role="search">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
          </div>
        </div>
      </div>
    </nav>
  </header>
  {{! main sections }}
  <section class="section gap-2" id="Home">
    {{! main side section }}
    <div class="side-section ">
      <div class="fixed-div">
        <div class="brand text-center mb-4 d-flex flex-column align-items-center">
          <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSK_ZZp2CjcOyih5-OsbN5uUgLFP8DEzb-lEg&usqp=CAU"
            class="w-25 main-logo" alt="" />
          <span class="fs-3 fw-bold text-dark">My Blogs</span>
        </div>
        <div class="qoute fw-bold text-center text-dark">
          <span>Discover stories, thinking, and expertise from writers on any
            topic.
          </span>
        </div>
        <div class="options text-center">
          <ul>
            <li class="list-unstyled">
              <a href="/specificView?id=Travel">
                <button class="btn text-dark border mb-4 mt-5">Travel</button>
              </a>
            </li>
            <li class="list-unstyled">
              <a href="/specificView?id=Nature">
                <button class="btn text-dark border mb-4 mt-5">Nature</button>
              </a>
            </li>
            <li class="list-unstyled">
              <a href="/specificView?id=Health">
                <button class="btn text-dark border mb-4 mt-5">Health</button>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    {{! main section }}
    <div class="main-section ps-4">
      <div class="trending">
        <div class="text-center fw-bold mt-2 mb-4"><span class="ps-2 text-dark fs-4">Latest</span></div>
        {{! latest posts }}
        {{#each latest}}
        <div class="posts">
          <div class="w-75 m-auto mt-5 text-dark post">
            <img src="/assets/{{this.images.[0].filename}}" class="d-block w-100 border border-black rounded-5"
              alt="post-img" />
            <span class="d-block m-2">{{this.heading}} â€” {{this.date}}</span>
            <span class="d-block fw-bold fs-6 m-2">{{this.content}}</span>
            {{!-- <div class="author d-flex flex-row gap-3 m-2">
              <img src="https://preview.colorlib.com/theme/magdesign/images/person_1.jpg" class="author-img" alt="" />
              <div class="d-flex flex-column"><span class="fw-bold">Sergy
                  Campbell</span><span class="text-dark">CEO and Founder</span></div>
            </div> --}}
          </div>
        </div>
        {{/each}}
      </div>
      {{! blogs }}
      <div class="Blogs mt-3 mb-3" id="blogs">
        <div class="text-center">
          <span class="fw-bold fs-4">Blogs</span>
        </div>
        <div class="container w-75">
          <div class="row d-flex">
            {{#each data}}
            <div class="col-xl-3 col-lg-4 col-md-4 col-sm-6 col-10 mb-2">
              <a href="/detailedView?id={{this._id}}" class="text-decoration-none">
                <div class="card">
                  <img src="/assets/{{this.images.[0].filename}}" class="card-img-top blog-img" alt="..." />
                  <div class="card-body bg-secondary">
                    <p class="card-text text-white">{{this.heading}}</p>
                  </div>
                </div>
              </a>
            </div>
            {{/each}}
          </div>
          <div class="pagination d-flex justify-content-between">
            <i class="fa-solid fa-angle-left"></i>
            <i class="fa-solid fa-angle-right"></i>
          </div>
        </div>

      </div>
    </div>
  </section>
  {{! footer }}
  <footer>
    <div class="container-fluid footer" id="footer">
      <div class="row">
        <div
          class="col-xl-4 col-md-12 col-sm-12 p-3 mt-1 mb-1 text-center d-flex flex-column align-items-center justify-content-center">
          <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSK_ZZp2CjcOyih5-OsbN5uUgLFP8DEzb-lEg&usqp=CAU"
            alt="" class="footer-logo" />
          <span class="fw-bold">My Blog</span>
        </div>
        <div class="col-xl-4 col-md-12 col-sm-12 p-3 mt-1 mb-1 text-center">
          <ul class="list-footer">
            <li class="p-2">Home</li>
            <li class="p-2">About</li>
            <li class="p-2">Latest</li>
          </ul>
        </div>
        <div class="col-xl-4 col-md-12 col-sm-12 p-3 mt-1 mb-1 text-center">
          <ul class="list-footer d-flex justify-content-center align-items-center">
            <li class="p-2"><i class="fa-brands fa-instagram"></i></li>
            <li class="p-2"><i class="fa-brands fa-twitter"></i></li>
            <li class="p-2"><i class="fa-brands fa-facebook"></i></li>
          </ul>
        </div>
      </div>
    </div>
  </footer>
  <script src="script/home.js"></script>
  <script src="https://kit.fontawesome.com/2cca22d63c.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js"
    integrity="sha384-Rx+T1VzGupg4BHQYs2gCW9It+akI2MM/mndMCy36UVfodzcJcF0GGLxZIzObiEfa"
    crossorigin="anonymous"></script>
</body>

</html>